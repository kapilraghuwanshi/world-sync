{
  "expo": {
    "name": "world-sync",
    "slug": "world-sync",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kialabs.worldsync",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show your local timezone on the globe."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.kialabs.worldsync",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png",
      "output": "false",
      "meta": {
        "title": "World Sync - Interactive 3D World Clock",
        "description": "Spin the world, find your time. Beautiful 3D globe timezone explorer.",
        "keywords": "timezone,world clock,3D globe,interactive,time converter"
      }
    },
    "plugins": [
      "expo-location"
    ],
    "scheme": "worldsync",
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
